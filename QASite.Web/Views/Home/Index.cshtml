@model List<QASite.Data.Question>

<div class="row">
    <div class="col-md-8 offset-md-2" style="margin-top:100px">
        @foreach (var question in Model)
        {
            <div class="card card-body bg-light">
                <h4>
                    <a href="/questions/viewquestion?id=@question.Id">
                        @question.Title
                    </a>
                </h4>
                <div>
                    <span>Tags:</span>
                    @foreach (var qt in question.QuestionsTags)
                    {
                        <span class="badge badge-primary">@qt.Tag.Name</span>
                    }
                </div>
                <div style="margin-top: 10px;">
                    @(question.Text.Length < 200 ? question.Text : (question.Text.Substring(0, 200) + "..."))
                </div>
                <span>Likes: @question.Likes.Count</span>
                <br />
                <span>@question.Answers.Count answer(s)</span>
            </div>
        }
    </div>
</div>

